<resources>

    <!-- Base application theme. -->
   <style name="SchoolStyle" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="windowActionBar">false</item>
       <item name="colorPrimary">@color/colorPrimary</item>
       <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
       <item name="android:windowBackground">@android:color/transparent</item>
   </style>
    <style name="SchoolStyle.AppBartheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="SchoolStyle.ToolBarAction" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="CustomDialog" parent="Base.Theme.AppCompat.Light.Dialog.MinWidth">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
</style>
    <style name="Alert" parent="AlertDialog.AppCompat.Light"/>
    <style name="SchoolStyle.ColdStar">
        <item name="android:windowBackground">@drawable/coldbg</item>
    </style>
</resources>
